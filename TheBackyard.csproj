<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>TheBackyard</PackageId>
    <Version>1.0.7</Version>
    <Authors>Zackbot</Authors>
    <Description>A collection of personal utility libraries created by Zackbot.</Description>
    <RepositoryUrl>https://github.com/Zackbot2/The-Backyard</RepositoryUrl>
    <PackageProjectUrl>https://github.com/Zackbot2/The-Backyard</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>

    <!-- code version -->
    <TargetFrameworks>net9.0</TargetFrameworks>
    <LangVersion>preview</LangVersion>
    <EnablePreviewFeatures>true</EnablePreviewFeatures>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <Deterministic>true</Deterministic>
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>

    <!-- Prevent umbrella from generating assembly attributes if it has no code -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
  </PropertyGroup>

  <!-- root README -->
  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

  <!-- sub-libraries -->
  <ItemGroup>
    <ProjectReference Include="MonoGameLib\src\TheBackyard.MonogameLib.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
  </ItemGroup>

  <!-- Make sure we never compile anything under obj -->
  <ItemGroup>
    <Compile Remove="**\obj\**\*.cs" />
    <Compile Remove="obj\**\*.cs" />
    <None Remove="**\obj\**\*" />
  </ItemGroup>

  <!-- Bundle built DLLs into the package (optional if you want a single umbrella package) -->
  <Target Name="BundleSubLibs" BeforeTargets="Pack">
    <ItemGroup>
      <_MonoGameLibFiles Include="$(MSBuildProjectDirectory)\MonoGameLib\src\bin\$(Configuration)\net9.0\TheBackyard.MonogameLib.dll" />
      <_MonoGameLibFiles Include="$(MSBuildProjectDirectory)\MonoGameLib\src\bin\$(Configuration)\net9.0\TheBackyard.MonogameLib.xml" Condition="Exists('$(MSBuildProjectDirectory)\MonoGameLib\src\bin\$(Configuration)\net9.0\TheBackyard.MonogameLib.xml')" />
      <_MonoGameLibFiles Include="$(MSBuildProjectDirectory)\MonoGameLib\src\bin\$(Configuration)\net8.0\TheBackyard.MonogameLib.pdb" Condition="Exists('$(MSBuildProjectDirectory)\MonoGameLib\src\bin\$(Configuration)\net9.0\TheBackyard.MonogameLib.pdb')" />
    </ItemGroup>
    <ItemGroup>
      <None Include="@(_MonoGameLibFiles)" Pack="true" PackagePath="lib\net9.0\" />
    </ItemGroup>
  </Target>

</Project>
