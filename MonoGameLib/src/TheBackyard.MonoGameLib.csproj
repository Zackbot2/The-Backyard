<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>1.0.0</Version>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>TheBackyard.MonoGameLib</RootNamespace>
    <AssemblyName>TheBackyard.MonoGameLib</AssemblyName>
    <OutputType>Library</OutputType>
    <Authors>Zackbot</Authors>
    <Description>MonoGame utility library.</Description>
    <RepositoryUrl>https://github.com/Zackbot2/The-Backyard</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.0" PrivateAssets="All" />
    <None Include="../README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

</Project>